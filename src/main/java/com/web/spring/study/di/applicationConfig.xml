<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:component-scan base-package="com.web.spring.study.di" />
    
    <bean id="family" class="com.web.spring.study.di.Family">
        <constructor-arg value="John" index="0" />
    </bean>

    <bean id="family2" class="com.web.spring.study.di.Family">
        <constructor-arg>
            <set>
                <value>father</value>
                <value>mother</value>
            </set>
        </constructor-arg>
    </bean>
    
    <bean id="family3" class="com.web.spring.study.di.Family">
        <constructor-arg>
            <list>
                <value>sleep</value>
                <value>play</value>
            </list>
        </constructor-arg>
    </bean>
    
    <bean id="family4" class="com.web.spring.study.di.Family">
        <constructor-arg>
            <map>
                <entry key="father" value="180"/>
                <entry key="mother" value="174"/>
            </map>
        </constructor-arg>
    </bean>
    
    <bean id="family5" class="com.web.spring.study.di.Family">
        <constructor-arg value="John" />
        <constructor-arg >
            <set>
                <value>father</value>
                <value>mother</value>
            </set>
        </constructor-arg>
        <constructor-arg >
            <list>
                <value>sleep</value>
                <value>play</value>
            </list>
        </constructor-arg>
        <constructor-arg >
            <map>
                <entry key="father" value="180"/>
                <entry key="mother" value="174"/>
            </map>
        </constructor-arg>
    </bean>        
    
</beans>
